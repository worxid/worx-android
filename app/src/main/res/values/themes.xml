<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/status_bar_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.Worx</item>
    </style>

    <style name="Theme.Worx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.Worx.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Worx.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Worx.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!--Header Background Color and selected Day Background Color-->
        <item name="colorAccent">#DA3630</item>
        <!-- Buttons Color-->
        <item name="colorPrimary">#DA3630</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="BlueCalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!--Header Background Color and selected Day Background Color-->
        <item name="colorAccent">#39A0FF</item>
        <!-- Buttons Color-->
        <item name="colorPrimary">#39A0FF</item>
        <item name="colorOnPrimary">#39A0FF</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="GreenCalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!--Header Background Color and selected Day Background Color-->
        <item name="colorAccent">#4CAF50</item>
        <!-- Buttons Color-->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>
</resources>